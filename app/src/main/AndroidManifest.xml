<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.splitit">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SplitIt"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".Activities.ChatActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.Home"
            android:exported="false"
            android:theme="@style/fullscreen"></activity>
        <activity
            android:name=".Activities.VerifyPhone"
            android:exported="false" />
        <activity
            android:name=".Activities.PhoneAuth"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            >
        </activity>
        <activity
            android:name=".Activities.Registration"
            android:exported="false" />
        <activity
            android:name=".Activities.Login"
            android:exported="false"
            android:theme="@style/fullscreen"></activity>
        <activity
            android:name=".Activities.MainActivity"
            android:exported="false"
            android:theme="@style/Splashscreen"></activity>
    </application>

</manifest>